{
  "name": "opg-puppeteer-pdf",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "start:webserver": "node -r esm src/server.js",
    "unit-test": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "unit-test-coverage": "jest --ci --runInBand --reporters=default --reporters=jest-junit --collectCoverage=true",
    "lint:check": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ignore-path .gitignore .",
    "jshint": "jshint src/",
    "redoc:build": "redoc-cli bundle openapi/openapi.yaml -o openapi/docs/index.html"
  },
  "author": "Ministry of Justice",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cheerio": "^1.0.0-rc.10",
    "esm": "^3.2.25",
    "pdf-lib": "^1.17.1",
    "polka": "^0.5.2",
    "puppeteer": "^14.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.18.0",
    "babel-jest": "^28.1.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "jest-junit": "^13.2.0",
    "jshint": "^2.13.4",
    "prettier": "^2.6.2",
    "redoc-cli": "^0.13.13",
    "supertest": "^6.2.3"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "resetMocks": true,
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "testPathIgnorePatterns": [
      "src/server.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
