{
  "name": "opg-puppeteer-pdf",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "start:webserver": "node -r esm src/server.js",
    "unit-test": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "unit-test-coverage": "jest --ci --runInBand --reporters=default --reporters=jest-junit --collectCoverage=true"
  },
  "author": "Ministry of Justice",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.1",
    "cheerio": "^1.0.0-rc.10",
    "esm": "^3.2.25",
    "pdf-lib": "^1.17.1",
    "polka": "^0.5.2",
    "puppeteer": "^11.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "babel-jest": "^27.4.6",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "supertest": "^6.1.6"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "resetMocks": true,
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "testPathIgnorePatterns": [
      "src/server.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
