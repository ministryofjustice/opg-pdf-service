{
  "name": "opg-puppeteer-pdf",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "start:webserver": "node -r esm src/server.js"
  },
  "author": "Ministry of Justice",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.10",
    "esm": "^3.2.25",
    "pdf-lib": "^1.2.1",
    "polka": "^0.5.2",
    "puppeteer": "^10.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.8",
    "babel-jest": "^27.0.6",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "supertest": "^6.1.3"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  },
  "jest": {
    "resetMocks": true,
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "testPathIgnorePatterns": [
      "src/server.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
