{
  "name": "opg-puppeteer-pdf",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "start:webserver": "node -r esm src/server.js",
    "unit-test": "jest --ci --runInBand --reporters=default --reporters=jest-junit --detectOpenHandles --forceExit",
    "unit-test-coverage": "jest --ci --runInBand --reporters=default --reporters=jest-junit --collectCoverage=true  --detectOpenHandles --forceExit",
    "lint:check": "eslint --ignore-pattern .gitignore .",
    "lint:fix": "eslint --fix --ignore-pattern .gitignore .",
    "jshint": "jshint src/",
    "redoc:build": "redoc-cli bundle openapi/openapi.yaml -o openapi/docs/index.html"
  },
  "author": "Ministry of Justice",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.20.3",
    "cheerio": "^1.0.0-rc.12",
    "esm": "^3.2.25",
    "polka": "^0.5.2",
    "puppeteer": "23.6.0"
  },
  "devDependencies": {
    "@babel/core": "7.25.8",
    "@babel/eslint-parser": "7.25.8",
    "@babel/preset-env": "7.25.8",
    "babel-jest": "29.7.0",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "jshint": "2.13.6",
    "pdf2pic": "^3.0.3",
    "pixelmatch": "^6.0.0",
    "prettier": "3.3.3",
    "redoc-cli": "0.13.21",
    "supertest": "7.0.0"
  },
  "resolutions": {
    "braces": "3.0.3"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  },
  "jest": {
    "testTimeout": 15000,
    "reporters": [
      "default",
      "jest-junit"
    ],
    "resetMocks": true,
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "testPathIgnorePatterns": [
      "src/server.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
