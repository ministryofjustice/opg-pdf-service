{
  "name": "opg-puppeteer-pdf",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "start:webserver": "node -r esm src/server.js",
    "unit-test": "jest --ci --runInBand --reporters=default --reporters=jest-junit --detectOpenHandles --forceExit",
    "unit-test-coverage": "jest --ci --runInBand --reporters=default --reporters=jest-junit --collectCoverage=true  --detectOpenHandles --forceExit",
    "lint:check": "eslint --ignore-pattern .gitignore .",
    "lint:fix": "eslint --fix --ignore-pattern .gitignore .",
    "jshint": "jshint src/",
    "redoc:build": "redocly build-docs pdf -o openapi/docs/index.html"
  },
  "author": "Ministry of Justice",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "7.28.6",
    "body-parser": "2.2.2",
    "cheerio": "^1.0.0-rc.12",
    "esm": "^3.2.25",
    "pino-http": "^11.0.0",
    "polka": "^0.5.2",
    "puppeteer": "22.15.0"
  },
  "devDependencies": {
    "@babel/core": "7.29.0",
    "@babel/eslint-parser": "7.28.6",
    "@babel/preset-env": "7.29.0",
    "@redocly/cli": "^2.0.0",
    "babel-jest": "30.2.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "jest": "30.2.0",
    "jest-junit": "16.0.0",
    "jshint": "2.13.6",
    "pdf2pic": "^3.0.3",
    "pixelmatch": "7.1.0",
    "prettier": "3.8.1",
    "supertest": "7.2.2"
  },
  "resolutions": {
    "braces": "3.0.3"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!pixelmatch).+\\.js$"
    ],
    "testTimeout": 15000,
    "reporters": [
      "default",
      "jest-junit"
    ],
    "resetMocks": true,
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "testPathIgnorePatterns": [
      "src/server.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
