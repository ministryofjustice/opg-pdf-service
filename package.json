{
  "name": "opg-puppeteer-pdf",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "start:webserver": "node -r esm src/server.js",
    "unit-test": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "unit-test-coverage": "jest --ci --runInBand --reporters=default --reporters=jest-junit --collectCoverage=true",
    "lint:check": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ignore-path .gitignore .",
    "jshint": "jshint src/",
    "redoc:build": "redoc-cli bundle openapi/openapi.yaml -o openapi/docs/index.html"
  },
  "author": "Ministry of Justice",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cheerio": "^1.0.0-rc.12",
    "esm": "^3.2.25",
    "polka": "^0.5.2",
    "puppeteer": "20.7.3"
  },
  "devDependencies": {
    "@babel/core": "7.22.5",
    "@babel/eslint-parser": "7.22.5",
    "@babel/preset-env": "7.22.5",
    "babel-jest": "29.5.0",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "jest-junit": "16.0.0",
    "jshint": "2.13.6",
    "prettier": "2.8.8",
    "redoc-cli": "0.13.21",
    "supertest": "6.3.3"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "resetMocks": true,
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "testPathIgnorePatterns": [
      "src/server.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
