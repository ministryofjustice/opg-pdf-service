{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "helpers:pinGitHubActionDigests",
        "schedule:earlyMondays"
    ],
    "branchPrefix": "renovate-",
    "packageRules": [
        {
            "automerge": true,
            "groupName": "Patch & Minor Updates",
            "groupSlug": "all-minor-patch-updates",
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "schedule": "* 0-6 1 * *",
            "minimumReleaseAge": "5 days"
        },
        {
            "description": "Github Actions: bundle all updates together",
            "groupSlug": "all-github-action-updates",
            "labels": [
                "devDependencies",
                "Renovate",
                "GithubActions"
            ],
            "groupName": "Github Actions",
            "automerge": true,
            "schedule": [
                "after 6am and before 9am on Monday"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "minimumReleaseAge": "3 days",
            "matchManagers": [
                "github-actions"
            ]
        }
    ],
    "major": {
        "labels": [
            "Dependencies",
            "Renovate"
        ],
        "minimumReleaseAge": "3 days"
    },
    "vulnerabilityAlerts": {
        "groupName": "Vulnerability Patches",
        "schedule": [
            "after 6am and before 7am every weekday"
        ],
        "dependencyDashboardApproval": false,
        "minimumReleaseAge": null,
        "rangeStrategy": "update-lockfile",
        "commitMessagePrefix": "[SECURITY]",
        "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
        "prCreation": "immediate"
    }
}
